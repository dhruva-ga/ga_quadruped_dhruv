<mujoco model="g1 scene">
  <include file="param.xml"/>

  <statistic center="0 0 0.7" extent="1.2" meansize="0.04"/>

  <visual>
    <!-- <headlight diffuse=".8 .8 .8" ambient=".2 .2 .2" specular="1 1 1"/> -->
    <rgba force="1 0 0 1"/>
    <global azimuth="140" elevation="-20"/>
    <map force="0.01"/>
    <scale forcewidth="0.3" contactwidth="0.5" contactheight="0.2"/>
    <quality shadowsize="8192"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="1 1 1" width="800" height="800"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="1 1 1" rgb2="1 1 1"
      markrgb="0 0 0" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"/>
  </asset>

  <worldbody>
    <geom name="floor" size="0 0 0.01" type="plane" material="groundplane"/>
  </worldbody>

  <contact>
    <pair name="FL_calf_collision_floor" geom1="FL_calf_collision" geom2="floor" condim="3" friction="1.0"/>
    <pair name="FR_calf_collision_floor" geom1="FR_calf_collision" geom2="floor" condim="3" friction="1.0"/>
    <pair name="RL_calf_collision_floor" geom1="RL_calf_collision" geom2="floor" condim="3" friction="1.0"/>
    <pair name="RR_calf_collision_floor" geom1="RR_calf_collision" geom2="floor" condim="3" friction="1.0"/>
  </contact>

  <sensor>
    <contact name="FL_calf_floor_found" geom1="FL_calf_collision" geom2="floor" reduce="mindist" num="1" data="found"/>
    <contact name="FR_calf_floor_found" geom1="FR_calf_collision" geom2="floor" reduce="mindist" num="1" data="found"/>
    <contact name="RL_calf_floor_found" geom1="RL_calf_collision" geom2="floor" reduce="mindist" num="1" data="found"/>
    <contact name="RR_calf_floor_found" geom1="RR_calf_collision" geom2="floor" reduce="mindist" num="1" data="found"/>
  </sensor>
</mujoco>